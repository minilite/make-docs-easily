---
// Astro.props 是一个特殊的对象，包含传递到页面的所有 props。
const {
  frontmatter: { title, category },
  url,
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="title" content={title} />
    <meta name="description" content="a docs built by astro" />
    <meta name="keywords" content="astro, docs" />
    <link rel="icon" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div id="container" class="grid min-h-screen max-w-6xl mx-auto transition-colors">
      <aside
        aria-label="Sidebar navigation"
        id="sidenav-open"
        class="z-50 grid px-2 lg:px-6 lg:block grid-cols-[max-content_1fr] invisible target:visible lg:visible lg:translate-x-0 sticky top-0 max-h-screen -translate-x-full target:translate-x-0 transition-transform"
      >
        <!-- <Sidenav pages={pages} currentPath={url ?? ''} /> -->
      </aside>
      <main aria-label="Main panel" class="max-w-[95vw] py-6 px-2 lg:px-6 mx-auto w-full">
        <!-- <Navbar items={navbarItems} /> -->
        <nav aria-label="Main navigation" class="flex items-center justify-between p-6">
          <header class="flex items-center gap-2">
            <a title="Open Menu" aria-label="Open Menu" href="#sidenav-open" class="lg:hidden">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3.75 9h16.5m-16.5 6.75h16.5"></path>
              </svg>
            </a>
            <a href="/" class="text-xl font-bold hover:text-slate-600 dark:hover:text-slate-300">
              基于Astro搭建的技术文档
            </a>
          </header>
          <div class="flex gap-4"></div>
        </nav>
        <section
          aria-label="Main content"
          class="bg-white dark:bg-slate-800 p-8 rounded-xl shadow-inner space-y-4"
        >
          <h1 class={`font-bold ${!url ? 'text-4xl md:text-6xl' : 'text-2xl md:text-4xl'}`}>
            {title}
          </h1>

          <article
            aria-label="Post"
            class="dark:prose-invert max-w-none prose prose-p:leading-loose prose-li:leading-loose prose-headings:font-bold prose-headings:my-4"
          >
            <slot />
          </article>
        </section>
        <!-- <Footer items={footerItems} /> -->
      </main>
    </div>
    <style is:global>
      html,
      body {
        @apply scroll-smooth bg-slate-50 text-slate-900 antialiased transition-colors dark:bg-slate-900 dark:text-slate-50;
      }

      /** Side Navigation */
      #container {
        grid: [stack] 1fr / 1fr [stack] 4fr;
      }

      @media (max-width: 1024px) {
        #container {
          grid: [stack] 1fr / min-content [stack] 1fr;
        }
        #container > * {
          grid-area: stack;
        }
      }
    </style>
  </body>
</html>

<!-- 设置全局样式 -->
<style is:global>
  .prose * > a {
    @apply border-b-2 border-slate-500 pb-1 no-underline transition-all hover:pb-2;
  }
  .prose pre {
    @apply p-5 drop-shadow-2xl;
  }
</style>
